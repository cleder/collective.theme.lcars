<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="collective_theme_lcars">

 <object name="collective_theme_lcars_images"
    meta_type="Filesystem Directory View"
    directory="collective.theme.lcars:skins/images" />
 <object name="collective_theme_lcars_templates"
    meta_type="Filesystem Directory View"
    directory="collective.theme.lcars:skins/templates" />
 <object name="collective_theme_lcars_styles"
    meta_type="Filesystem Directory View"
    directory="collective.theme.lcars:skins/styles" />
 <object name="collective_theme_lcars_javascripts"
    meta_type="Filesystem Directory View"
    directory="collective.theme.lcars:skins/javascripts" />

 <skin-path
    name="collective_theme_lcars"
    based-on="Sunburst Theme"
    >
  <layer
     name="collective_theme_lcars_images"
     insert-after="custom"
     />
  <layer
     name="collective_theme_lcars_templates"
     insert-after="collective_theme_lcars_images"
     />
  <layer
     name="collective_theme_lcars_styles"
     insert-after="collective_theme_lcars_templates"
     />
  <layer
      name="collective_theme_lcars_javascripts"
      insert-after="collective_theme_lcars_styles"
      />
 </skin-path>

</object>
